// Font settings

@import url(http://fonts.googleapis.com/css?family=Lato:100,300,400,700)    

font_base = Lato
font_base_size = 16px
font_base_weight = 300

font_small = 0.9em

font_book_weight = 300
font_bold_weight = 700
font_normal_weight = 400
font_thin_weight = 100


// Headings (h1, h2, h3, ...)

heading_font_weight = 300
heading_line_height = 1.2em
heading_margin = 0 0 0 0


// Logo, header and site width container

logo_font_size = 1.8em

header_line_height = 3em

site_width = 1024px


// Paragraph (p), margins and padding settings

paragraph_line_height = 1.5em
paragraph_margin = 0 0 10px 0
paragraph_right_left = 0

margin_small = 7px
margin_medium = 10px
margin_big = 40px

padding_small = 4px
padding_medium = 10px
padding_big = 50px


// Borders (width and radius)

border_small = 1px
border_medium = 2px
border_big = 6px

border_radius_small = 5px
border_radius_medium = 10px
border_radius_big = 15px


// Margin for images

img_margin = 0 0 0 0


// Links styles

a_color = blue_dark
a_text_decoration = none

a_hover_color = #2D91EA
a_hover_text_decoration = none


// Lists paddings

li_padding_top_bottom = 10px
li_padding_right_left = 0px


// Shadow for text and box

shadow_small = 1px 1px 2px
shadow_medium = 10px 10px 20px
shadow_big = 30px 30px 40px


// Grid

column_width = 100px
gutter_width = 120px
columns = 12 // max 16

total_width = 100% // 100% to fluid grid


// Colors (Set var to false to not include classes)

include_basic_colors = true

black = black
blue = #2D91EA
green = #53a93f
orange = #EF7509
pink = #F33E6F
red = #d14836
yellow = #F8DE07
